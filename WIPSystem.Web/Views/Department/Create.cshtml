@model WIPSystem.Web.Models.Department

@{

    ViewBag.Title = "Create Department";
}
<div class="container-fluid" style="margin-top: 20px;">
    <div class="row justify-content-center">
        <div class=" col-lg-6 col-md-8">
            <div class="card p-3">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <h2 class="heading text-center">Register New User</h2>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-12 border-10 border" style="background-color: white;">
                        <div class="col-md-12">
                            <form asp-action="Create" method="post">
                                <div class="form-group">
                                    <label for="DepartmentName">Department Name</label>
                                    <input asp-for="DepartmentName" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary">Add Department</button>
                                <!-- Back Button -->
                                <button type="button" class="btn btn-secondary" onclick="window.history.back();">Back</button>
                            </form>
                        </div>
                     </div>
                 </div>
            </div>
        </div>
    </div>
</div>
