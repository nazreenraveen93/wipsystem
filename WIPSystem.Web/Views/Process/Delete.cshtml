@model WIPSystem.Web.Models.Process
@{

    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Delete Process</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 border-1 border">
            <form asp-action="Delete" asp-controller="Process" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <input type="hidden" asp-for="@Model.ProcessId" />
                    <label asp-for="@Model.ProcessName" class="form-label"></label>
                    <input asp-for="@Model.ProcessName" class="form-control" disabled/>
                  
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ProcessCode" class="form-label"></label>
                    <input asp-for="@Model.ProcessCode" class="form-control" disabled />
                    

                </div>
                <div class="mb-3">
                    <a asp-controller="Process" asp-action="Index" class="btn btn-primary">Back</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
 