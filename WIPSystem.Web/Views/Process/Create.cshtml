@model WIPSystem.Web.Models.Process
@{

    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Create Process</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 border-1 border">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="@Model.ProcessName" class="form-label"></label>
                    <input asp-for="@Model.ProcessName" class="form-control" />
                    <span asp-validation-for="@Model.ProcessName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ProcessCode" class="form-label"></label>
                    <input asp-for="@Model.ProcessCode" class="form-control" />
                    <span asp-validation-for="@Model.ProcessCode" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <a asp-controller="Process" asp-action="Index" class="btn btn-danger">Back</a>
                    <button type="submit" class="btn btn-success">Create</button>
                    <!-- Back Button -->
                    <button type="button" class="btn btn-secondary" onclick="window.history.back();">Back</button>
                </div>
            </form>
            </div>
        </div>
</div>
